#!/usr/bin/env ruby

require "thor"
require "rubrb"

class Rb < Thor
  include Thor::Actions

  desc "test [file]", "Run tests for a file or many"
  long_desc <<-LONGDESC
    `rb test` one or more files - can pass in partial names, see examples

    # A single test
    \x5$ rb test config

    # Many tests
    \x5$ rb test config auth
  LONGDESC
  def test(*file)
    Rubrb.test(file: file)
  end

end

Rb.start(ARGV)
