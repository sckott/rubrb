#!/usr/bin/env ruby

require "thor"
require "rubrb"

class Rb < Thor
  include Thor::Actions

  desc "test [file]", "Run tests for a file"
  long_desc <<-LONGDESC
    `rb test` a file

    # A single test
    \x5$ rb test config

    # Many tests
    \x5$ rb test config auth
  LONGDESC
  def test(*file)
    Rubrb.test(file: file)
  end

end

Rb.start(ARGV)
