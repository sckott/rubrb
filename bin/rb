#!/usr/bin/env ruby

require "thor"
require "rubrb"

class Rb < Thor
  include Thor::Actions

  desc "test [file]", "Run tests for a file"
  long_desc <<-LONGDESC
    `rb test` a file

    # A single file
    \x5$ rb test config
  LONGDESC
  def test(file)
    Rubrb.test(file: file)
  end

  desc "tests [file]", "Run tests for many files"
  long_desc <<-LONGDESC
    `rb tests` many files

    # Many iles
    \x5$ rb tests config auth
  LONGDESC
  def tests(*file)
    file.each do |x|
      Rubrb.test(file: file)
    end
  end

end

Rb.start(ARGV)
